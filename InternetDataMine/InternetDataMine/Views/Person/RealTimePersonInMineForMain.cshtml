        divMain.empty();
        InMineCount = 0;
        $("#lbl_InMineCount")[0].innerText = "0";
        var tt = new Array();
        $(object).each(function(index, item) {
            InMineCount++;

            $("#lbl_InMineCount")[0].innerHTML = InMineCount;
