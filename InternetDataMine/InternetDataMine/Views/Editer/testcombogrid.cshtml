<script type="text/javascript">

    $(document).ready(function () {
        alert("j");
       
    });


    function GetComboValue()
    {
        $('#comboRole').combogrid('setText', '');
        var xx = $('#comboRole').combogrid('getValue') + $('#comboRole').combogrid('getText');
        alert(xx);
    }

